<!doctype html>
<html>
<head>
  <% include ../head/default.ejs %>
  <title>运单信息 | 蚂蚁相传</title>
</head>
<body>
<% include ../header/default.ejs %>
<div class="am-container">
  <h3>我的任务</h3>
  <div id="qrcode" style="text-align: center; margin: 6px 0;"></div>
  <table class="am-table am-table-bordered am-table-radius">
    <tr>
      <td>运单编号：<%= order._id %></td>
    </tr>
    <tr>
      <td>起点：<%= parcelPath.start %></td>
    </tr>
    <tr>
      <td>终点：<%= parcelPath.end %></td>
    </tr>
    <tr>
      <td>物品：<%= parcel.content %></td>
    </tr>
    <tr>
      <td>重量：<%= parcel.weight %> <%= parcel.unit %></td>
    </tr>
    <tr>
      <td>创建时间：<%= createdAt %></td>
    </tr>
    <tr>
      <td>更新时间：<%= updatedAt %></td>
    </tr>
  </table>
  <div style="margin-bottom: 12px;">
    <button type="button" class="am-btn am-btn-primary am-btn-lg am-center" onclick="closeWindow()">关闭</button>
  </div>
</div>

<% include ../script/default.ejs %>
<script>
  function closeWindow() {
    wx.closeWindow();
  }
  $('#qrcode').qrcode({size: 200, text: '{"id":"<%= order._id %>","token":"<%= order.token %>"}'});
</script>
</body>
</html>